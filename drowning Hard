#drowing Hard 
import turtle
t=turtle.Turtle()
creeen=turtle.Screen()
creeen.bgcolor("black")
t.pensize(3)
turtle.speed(1)
def curve():
    for i in range(200):
        t.right(1)
        t.forward(1)


t.color("red","pink")
t.begin_fill()
t.left(140)
t.forward(111.5)
curve()
t.left(120)
curve()
t.forward(111.65)
t.end_fill()
t.hideturtle()
turtle.done()
